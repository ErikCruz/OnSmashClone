<h1 class='single-page-title'>{{title}}</h1>
<div class='form-container'>
    <form action='/videos/new' method='post'>
        <div class='form-group'>
            <label for="title">Title:</label>
            <input type='text' class='form-control' id='title' name='title' placeholder='Video Title'>
        </div>
        <div class='form-group'>
            <label for="username">Description:</label>
            <textarea class="form-control" rows="5" id="username"></textarea>
        </div>
        <div class='form-group'>
            <label for='video_link'>Video Link:</label>
            <input type='text' class='form-control' id='video_link' placeholder='YouTube/Dailymotion'>
        </div>
        <button type='submit' class='btn btn-primary'>Add Video</button>
    </form>
</div>